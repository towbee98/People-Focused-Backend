extends ../base.pug

block content 
    // services-single
    .content(style='padding-bottom: 0;')
        .container
            .row
                .Service-description
                    .service-data.mb30
                        .post-job-description(style='max-width: 600px;')
                            h1.mb30.text-center Admin Sign In
                            form(action='#' method='POST' name="login")
                                .row
                                    .col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        .form-group
                                            label.control-label.sr-only(for='email') Email
                                            input#Email.form-control(type='email' name='email' placeholder='Email*' required)
                                    .col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        .form-group
                                            label.control-label.sr-only(for='password') Password
                                            input#password.form-control(type='password' name='password' placeholder='Password*' required)
                                    .col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        button#submit-job-details.btn.btn-primary.btn-lg(type='submit') Submit 
                                        |
                                        |
                                        span.alert.alert-success(role="alert" style="display:none")
                                            span(class="glyphicon glyphicon-ok" aria-hidden="true")
                                            |
                                            | 
                                        span.alert.alert-danger(role="alert" style="display:none")
                                            span(class="glyphicon glyphicon-warning-sign" aria-hidden="true")
                                            |
                                            | 
                                    .col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        | Forgot your password?
                                        |
                                        a(href='/forgetPassword') Click here to reset your password.
    // /. services-single
    include ../_footers
    include ../_jsPlugin