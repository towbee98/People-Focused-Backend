extends base
    
block content 
    // page-header
    .page-header
        .container
            .row
                .col-lg-12.col-md-12.col-sm-12.col-xs-12
                    .page-caption
                        h1.page-title Find the job thatâ€™s just right for you
    // /.page-header
    // job-list-section
    .content
        .container
            .row
                .col-lg-12.col-md-12.col-sm-12.col-xs-12.mb30
                    p.lead If you're ready for a new challenging job, Browse Jobs on PeopleFocused and take a look at our Popular Job Locations and Job Titles
            .row.job-container
                each job in jobs
                    // job-list
                    .col-lg-6.col-md-6.col-sm-6.col-xs-12
                        .job-post-block
                            .job-post-content
                                a(href='jobs-single.html' job_id=`${job._id}`)
                                    h3.job-post-title= job.title
                                p= job.organisation.name
                                p
                                    span.job-location-icon
                                        i.fa.fa-map-marker
                                        |  
                                        span=  job.location.State, job.location.Country
                            .job-post-meta
                                 each skill in job.Skillset
                                    span.badge= skill
                                    //- span.badge reactjs
                                    //- span.badge css
                    // /.job-list
            .row
                .col-lg-12.col-md-12.col-sm-12.col-xs-12
                    .st-pagination
                        ul.pagination
                            li
                                a(href='#' aria-label='previous' class='previous-page' page=`${page-1}`)
                                    span(aria-hidden='true')
                                        i.fa.fa-angle-left  PREV
                            if page === 1
                                li.active
                                    a(href="#") 1
                                li 
                                    a(href="#") 2
                                li 
                                    a(href="#") 3
                            else if page === 2
                                li
                                    a(href="#") 1
                                li.active
                                    a(href="#") 2
                                li 
                                    a(href="#") 3
                            else if page === 3
                                li
                                    a(href="#") 1
                                li 
                                    a(href="#") 2
                                li.active
                                    a(href="#") 3
                            else 
                                li
                                    a(href="#") 1
                                li 
                                    a(href="#") 2
                                li 
                                    a(href="#") 3
                                 
                            li
                                a(href='#' aria-label='Next' class='next-page' page=`${page+1}`)
                                        span(aria-hidden='true')
                                            i.fa.fa-angle-right NEXT
    // job-list-section
    include _footers
    include _jsPlugin
